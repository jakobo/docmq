{
  "name": "docmq",
  "description": "A document based messaging queue for Mongo, DocumentDB, and others",
  "version": "0.5.6",
  "author": {
    "name": "Jakob Heuser",
    "email": "oss@codedrift.com"
  },
  "repository": "jakobo/docmq.git",
  "scripts": {
    "build": "run-s tsup 'verify:*'",
    "clean": "shx rm -rf dist && shx mkdir dist",
    "dev": "run-s watch",
    "dpdm": "dpdm",
    "lint": "eslint .",
    "lint-staged": "lint-staged",
    "prepare": "husky install",
    "rel": "release-it",
    "release:before:init": "run-s clean build test",
    "rev": "release-it --preRelease",
    "syncpack": "syncpack",
    "test": "NODE_OPTIONS='--loader=ts-node/esm' ava",
    "tsup": "tsup",
    "verify:cjs": "cd verify/cjs && npm install && node cjs.verify.js",
    "verify:esm": "cd verify/esm && npm install && node esm.verify.js"
  },
  "tsup": {
    "entry": {
      "index": "src/index.ts",
      "driver/loki": "src/driver/loki.ts",
      "driver/mongo": "src/driver/mongo.ts",
      "driver/postgres": "src/driver/postgres.ts"
    },
    "format": [
      "esm",
      "cjs"
    ],
    "dts": true,
    "splitting": false,
    "sourcemap": true,
    "clean": true,
    "minify": false
  },
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./driver/mongo": {
      "types": "./dist/driver/mongo.d.ts",
      "import": "./dist/driver/mongo.js",
      "require": "./dist/driver/mongo.cjs"
    },
    "./driver/loki": {
      "types": "./dist/driver/loki.d.ts",
      "import": "./dist/driver/loki.js",
      "require": "./dist/driver/loki.cjs"
    },
    "./driver/postgres": {
      "types": "./dist/driver/postgres.d.ts",
      "import": "./dist/driver/postgres.js",
      "require": "./dist/driver/postgres.cjs"
    }
  },
  "files": [
    "package.json",
    "README.md",
    "LICENSE",
    "dist",
    "driver"
  ],
  "engines": {
    "node": ">=14.19.0",
    "pnpm": "7.x"
  },
  "dependencies": {
    "@types/lokijs": "^1.5.7",
    "@types/pg": "^8",
    "abort-controller": "^3.0.0",
    "cron-parser": "^4.4.0",
    "eventemitter3": "^4.0.7",
    "lokijs": "^1.5.12",
    "luxon": "^2.4.0",
    "p-retry": "^5.1.1",
    "serialize-error": "^11.0.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@types/eslint": "*",
    "@types/luxon": "^2",
    "@types/node": "^17.0.41",
    "@types/uuid": "^8",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "ava": "^5.3.1",
    "dotenv": "^16.0.1",
    "dpdm": "^3.10.0",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "husky": "^8.0.2",
    "lint-staged": "^12.1.3",
    "mongodb": "^4.7.0",
    "npm-run-all": "^4.1.5",
    "pg": "^8.7.3",
    "pinst": "^3.0.0",
    "prettier": "^2.6.0",
    "release-it": "*",
    "shx": "^0.3.4",
    "syncpack": "^7.2.1",
    "ts-node": "^10.9.2",
    "tslib": "^2.4.0",
    "tsup": "^6.2.3",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "mongodb": "^4.7.0",
    "pg": "^8.7.3"
  },
  "peerDependenciesMeta": {
    "mongodb": {
      "optional": true
    },
    "pg": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
